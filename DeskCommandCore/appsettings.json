{
  "Logging": {
    "IncludeScopes": false,
    "Debug": {
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning"
      }
    }
  },
  "Layouts": [
    {
      "LayoutId": "A",
      "Title": "Random",
      "Items": [
        {
          "Icon": "facebook.png",
          "Text": "Launch Facebook",
          "Action": "DeskCommandCore.Actions.LaunchWebsite",
          "Arguments": [ "http://www.facebook.com" ]
        },
        {
          "Icon": "google.jpg",
          "Text": "Launch Google",
          "Action": "DeskCommandCore.Actions.LaunchWebsite",
          "Arguments": [ "http://www.google.com" ]
        }
      ]
    },
    {
      "LayoutId": "B",
      "Title": "OBS Studio",
      "Items": [
        {
          "Icon": "StopRecording.png",
          "Text": "Stop Recording",
          "Action": "DeskCommandCore.Actions.Obs.ObsToggleRecording"
        },
        {
          "Icon": "obs.png",
          "Text": "Scene 1",
          "Action": "DeskCommandCore.Actions.SendKeystrokes",
          "Arguments": [ "+({F1})", "obs64,obs32" ]
        },
        {
          "Icon": "obs.png",
          "Text": "Scene 2",
          "Action": "DeskCommandCore.Actions.SendKeystrokes",
          "Arguments": [ "+({F2})", "obs64,obs32" ]
        }
      ]
    },
    {
      "LayoutId": "C",
      "Title": "Sound Board",
      "Items": [
        {
          "Icon": "phone.png",
          "Text": "Phone Ringing",
          "Action": "DeskCommandCore.Actions.PlaySound",
          "Arguments": [ "phone.mp3" ]
        },
        {
          "Icon": "radio.png",
          "Text": "Radio interference",
          "Action": "DeskCommandCore.Actions.PlaySound",
          "Arguments": [ "radio.mp3" ]
        },
        {
          "Icon": "cricket.png",
          "Text": "Chirping Crickets",
          "Action": "DeskCommandCore.Actions.PlaySound",
          "Arguments": [ "cricket.mp3" ]
        }
      ]
    }
  ] 
}
